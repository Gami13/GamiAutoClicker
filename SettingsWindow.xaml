<?xml version="1.0" encoding="utf-8" ?>
<Window
	x:Class="GamiAutoClicker.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:CommunityToolkit.WinUI.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:GamiAutoClicker"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Settings"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>


		<TitleBar
			x:Name="AppTitleBar"
			Title="Gami's AutoClicker"
			Grid.Row="0"
			Subtitle="Settings">
			<TitleBar.IconSource>
				<FontIconSource FontFamily="Segoe Fluent Icons" Glyph="&#xE713;" />
			</TitleBar.IconSource>
		</TitleBar>

		<!--
			I will need:
			- a dropdown to select between Mica/MicaAlt/Acrylic/AcrylicThin
			- a dropdown to select between themes Dark/Light/Default
			- a toggle for overriding defaults
			- a color picker for fallbackColor
			- a color picker for tintColor
			- a slider for tintOpacity between 0.0 and 1.0
			- a slider for luminosityOpacity between 0.0 and 1.0
		-->


		<Grid
			Grid.Row="1"
			Margin="20"
			ColumnSpacing="16"
			RowSpacing="16">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>



			<ComboBox
				x:Name="BackdropMaterialComboBox"
				Grid.Row="0"
				Grid.Column="0"
				Header="Backdrop Material"
				PlaceholderText="Select a material"
				SelectionChanged="OnMaterialChange">
				<x:String>Mica</x:String>
				<x:String>MicaAlt</x:String>
				<x:String>Acrylic</x:String>
				<x:String>AcrylicThin</x:String>
			</ComboBox>

			<ComboBox
				x:Name="ThemeComboBox"
				Grid.Row="0"
				Grid.Column="1"
				Header="Theme"
				PlaceholderText="Select a theme"
				SelectionChanged="OnThemeChange">
				<x:String>Dark</x:String>
				<x:String>Light</x:String>
				<x:String>Default</x:String>
			</ComboBox>

			<ToggleSwitch
				x:Name="OverrideDefaultsToggleSwitch"
				Grid.Row="1"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Header="Override System Backdrop Defaults (Not recommended and basically ignores the Theme setting)"
				Toggled="OnOverridesChange" />

			<ColorPicker
				x:Name="FallbackColorPicker"
				Grid.Row="2"
				Grid.Column="0"
				ColorChanged="OnFallbackColorChange"
				ColorSpectrumShape="Ring"
				IsAlphaEnabled="True"
				IsMoreButtonVisible="True" />

			<ColorPicker
				x:Name="TintColorPicker"
				Grid.Row="2"
				Grid.Column="1"
				ColorChanged="OnTintColorChange"
				ColorSpectrumShape="Ring"
				IsAlphaEnabled="True"
				IsMoreButtonVisible="True" />

			<Slider
				x:Name="TintOpacitySlider"
				Grid.Row="3"
				Grid.Column="0"
				Header="Tint Opacity"
				Maximum="1.0"
				Minimum="0.0"
				StepFrequency="0.01"
				ValueChanged="OnTintOpacityChange" />

			<Slider
				x:Name="LuminosityOpacitySlider"
				Grid.Row="3"
				Grid.Column="1"
				Header="Luminosity Opacity"
				Maximum="1.0"
				Minimum="0.0"
				StepFrequency="0.01"
				ValueChanged="OnLuminosityOpacityChange" />

		</Grid>
	</Grid>

</Window>
