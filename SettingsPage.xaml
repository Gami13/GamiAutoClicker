<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GamiAutoClicker.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GamiAutoClicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid>
		<!--I will need: 
		- a dropdown to select between Mica/MicaAlt/Acrylic/AcrylicThin
		- a dropdown to select between themes Dark/Light/Default
		- a toggle for overriding defaults
		- a color picker for fallbackColor
		- a color picker for tintColor
		- a slider for tintOpacity between 0.0 and 1.0
		- a slider for luminosityOpacity between 0.0 and 1.0
		-->
		<Grid Margin="20" ColumnSpacing="16" RowSpacing="16">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<!-- Row 0: ComboBoxes side by side -->
			<ComboBox Grid.Row="0" Grid.Column="0" SelectionChanged="OnMaterialChange"  Header="Backdrop Material" x:Name="BackdropMaterialComboBox" PlaceholderText="Select a material">
				<x:String>Mica</x:String>
				<x:String>MicaAlt</x:String>
				<x:String>Acrylic</x:String>
				<x:String>AcrylicThin</x:String>
			</ComboBox>

			<ComboBox Grid.Row="0" Grid.Column="1" SelectionChanged="OnThemeChange" Header="Theme" x:Name="ThemeComboBox" PlaceholderText="Select a theme">
				<x:String>Dark</x:String>
				<x:String>Light</x:String>
				<x:String>Default</x:String>
			</ComboBox>

			<!-- Row 1: Toggle spans both columns -->
			<ToggleSwitch Toggled="OnOverridesChange" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="OverrideDefaultsToggleSwitch" Header="Override System Backdrop Defaults (Not recommended and basically ignores the Theme setting)" />

			<!-- Row 2: Color pickers side by side -->
			<ColorPicker ColorChanged="OnFallbackColorChange"  Grid.Row="2" Grid.Column="0" x:Name="FallbackColorPicker" ColorSpectrumShape="Ring" IsAlphaEnabled="True" IsMoreButtonVisible="True"
 />

			<ColorPicker ColorChanged="OnTintColorChange" Grid.Row="2" Grid.Column="1" x:Name="TintColorPicker"  ColorSpectrumShape="Ring" IsAlphaEnabled="True" IsMoreButtonVisible="True"
 />

			<!-- Row 3: Sliders side by side -->
			<Slider ValueChanged="OnTintOpacityChange" Grid.Row="3" Grid.Column="0" x:Name="TintOpacitySlider" Header="Tint Opacity" Minimum="0.0"  Maximum="1.0" StepFrequency="0.01" />

			<Slider ValueChanged="OnLuminosityOpacityChange"  Grid.Row="3" Grid.Column="1" x:Name="LuminosityOpacitySlider" Header="Luminosity Opacity" Minimum="0.0" Maximum="1.0" StepFrequency="0.01" />

		</Grid>
	</Grid>
</Page>
