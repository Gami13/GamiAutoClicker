<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="GamiAutoClicker.Components.ColorPickerFlyoutButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GamiAutoClicker.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="HeaderText"
            Grid.Row="0"
            Margin="{StaticResource TextBoxTopHeaderMargin}"
            AutomationProperties.HeadingLevel="Level3"
            Text="" />
        <DropDownButton
            x:Name="ColorButton"
            Grid.Row="1"
            Padding="3,3,6,3">
            <DropDownButton.Flyout>
                <Flyout
                    x:Name="ColorPickerFlyout"
                    Placement="Bottom"
                    ShouldConstrainToRootBounds="False">
                    <StackPanel>
                        <ColorPicker
                            x:Name="ColorPickerControl"
                            ColorSpectrumShape="Ring"
                            IsAlphaEnabled="True"
                            IsColorChannelTextInputVisible="True"
                            IsColorSliderVisible="True"
                            IsHexInputVisible="True"
                            IsMoreButtonVisible="True" />
                    </StackPanel>
                </Flyout>
            </DropDownButton.Flyout>

            <Border
                x:Name="ColorDisplay"
                Width="34"
                Height="24"
                BorderBrush="{ThemeResource ButtonBorderBrush}"
                BorderThickness="{ThemeResource ButtonBorderThemeThickness}"
                CornerRadius="6"
                Loaded="ColorDisplay_Loaded">
                <Rectangle x:Name="ColorDisplayFill" />
            </Border>




        </DropDownButton>
    </Grid>
</UserControl>
